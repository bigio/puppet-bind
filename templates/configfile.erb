<% if !@acl.empty? -%>
<% @acl.each do |key,value| -%>
acl <%= key %> {
<% value.each do |ip| -%>
<%= ip %>;
<% end -%>
};
<% end -%>
<% end -%>

options {

<% if !@listen_on.empty? -%>
listen-on port 53 {
<% @listen_on.each do |listv4| -%>
  <%= listv4 %>;
<% end -%>
};
<% end -%>

<% if !@listen_on_v6.empty? -%>
listen-on-v6 port 53 {
<% @listen_on_v6.each do |listv6| -%>
  <%= listv6 %>;
<% end -%>
};
<% end -%>

<% if !@allow_query.empty? -%>
allow-query {
<% @allow_query.each do |listquery| -%>
  <%= listquery %>;
<% end -%>
};
<% end -%>

<% if !@allow_transfer.empty? -%>
allow-transfer {
<% @allow_transfer.each do |listtransfer| -%>
  <%= listtransfer %>;
<% end -%>
};
<% end -%>

<% if !@allow_update.empty? -%>
allow-update {
<% @allow_update.each do |listupdate| -%>
  <%= listupdate %>;
<% end -%>
};
<% end -%>

<% if @directory -%>
directory "<%= @directory %>";
<% end -%>
<% if @dump_file -%>
dump-file "<%= @dump_file %>";
<% end -%>
<% if @zone_statistics -%>
zone-statistics <%= @zone_statistics %>;
<% end -%>
<% if @statistics_file -%>
statistics-file "<%= @statistics_file %>";
<% end -%>
<% if @memstatistics_file -%>
memstatistics-file "<%= @memstatistics_file %>";
<% end -%>
<% if @blackhole -%>
blackhole <%= @blackhole %>;
<% end -%>
<% if @recursion -%>
recursion <%= @recursion %>;
<% end -%>
<% if @allow_recursion -%>
allow-recursion <%= @allow_recursion %>
<% end -%>
<% if @dnssec_enable -%>
dnssec-enable <%= @dnssec_enable %>;
<% end -%>
<% if @dnssec_validation -%>
dnssec-validation <%= @dnssec_validation %>;
<% end -%>
<% if @bindkeys_file -%>
bindkeys-file "<%= @bindkeys_file %>";
<% end -%>
<% if @managed_keys_directory -%>
managed-keys-directory "<%= @managed_keys_directory %>";
<% end -%>
<% if @pid_file -%>
pid-file "<%= @pid_file %>";
<% end -%>
<% if @session_keyfile -%>
session-keyfile "<%= @session_keyfile %>";
<% end -%>
<% if @auth_nxdomain -%>
auth-nxdomain <%= @auth_nxdomain %>;
<% end -%>
<% if @version -%>
version <%= @version %>;
<% end -%>
<% if @server_id -%>
server-id <%= @server_id %>;
<% end -%>
<% if @cleaning_interval -%>
cleaning-interval <%= @cleaning_interval %>;
<% end -%>
<% if @interface_interval -%>
interface-interval <%= @interface_interval %>;
<% end -%>
<% if @max_ncache_ttl -%>
max-ncache-ttl <%= @max_ncache_ttl %>;
<% end -%>
<% if @nnotify -%>
notify <%= @nnotify %>;
<% end -%>
<% if @request_ixfr -%>
request-ixfr <%= @request_ixfr %>;
<% end -%>
<% if @edns_udp_size -%>
edns-udp-size <%= @edns_udp_size %>;
<% end -%>
<% if @max_udp_size -%>
max-udp-size <%= @max_udp_size %>;
<% end -%>
};

<% if @logging -%>
logging {
  channel default_debug {
    file "data/named.run";
    severity dynamic;
    print-time yes;
  };
};
<% end -%>

<% if !@statistics_channels.empty? -%>
<% @statistics_channels.each do |key,value| -%>
statistics-channels {
  inet <%= key %> port 8083 allow {
<% value.each do |directive| -%>
  <%= directive %>;
<% end -%> 
  };
};
<% end -%>
<% end -%>

<% if !@key.empty? -%>
<% @key.each do |key,value| -%>
key "<%= key %>" {
<% value.each do |directive| -%>
  <%= directive %>;
<% end -%>
};
<% end -%>
<% end -%>

/*
   Zones Section
*/
<% if !@zone.empty? -%>
<% @zone.each do |key,value| -%>
zone "<%= key %>" IN {
<% value.each do |directive| -%>
  <%= directive %>;
<% end -%>
};
<% end -%>
<% end -%>

<% if !@include.empty? -%>
<% @include.each do |directory| -%>
include "<%= directory %>";
<% end -%>
<% end -%>
